function! GenerateCtags()
  let l:command = "ctags -R ."
	if v:version < 800
		call xolox#misc#os#exec({'command': l:command, 'check': 0, 'async': 1 })
	else
		silent exe '!' . l:command
	endif
endfunction

command! Ctags call GenerateCtags()

