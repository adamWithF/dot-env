function! SetupTabEnv()
  let t:quickfix_is_open = 0
endfunction

function! QuickfixToggle()
  if t:quickfix_is_open
    cclose
    let t:quickfix_is_open = 0
  else
    copen
    let t:quickfix_is_open = 1
  endif
endfunction

